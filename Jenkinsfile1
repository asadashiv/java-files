pipeline {
agent {label 'slave_java'}
tools {
maven 'maven'
}
stages{
stage ('build'){
steps{
sh '''
cd /home/jenkins/workspace/workspace/java_build
mvn clean install
'''

}
}
stage ('Deploy'){
steps{
scp -r /home/jenkins/workspace/workspace/java_build/target/hello-world-war-1.0.0 ubutnu@172.31.38.248:/opt/tomcat/webapps

}
}
}
}
